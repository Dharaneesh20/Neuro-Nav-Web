{
  "extends": ["airbnb", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "rules": {
    "no-underscore-dangle": "off",
    "consistent-return": "warn",
    "no-param-reassign": "warn",
    "func-names": "off",
    "object-shorthand": "warn",
    "class-methods-use-this": "warn",
    "no-console": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".git/",
    ".env*"
  ]
}
